<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login.VerificationActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Tombol Back -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/kembali"
                android:contentDescription="Kembali"
                android:layout_gravity="start" />

            <!-- Judul -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="Verifikasi"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Gambar -->
            <ImageView
                android:id="@+id/img_verify"
                android:layout_width="310dp"
                android:layout_height="282dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/gambar" />

            <!-- Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukkan Kode Verifikasi"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal" />

            <!-- Input Kode OTP -->
            <LinearLayout
                android:id="@+id/layout_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/otp_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/otp_circle"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/otp_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/otp_circle"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/otp_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/otp_circle"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/otp_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/otp_circle"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Teks kecil -->
            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Jika belum menerima kode, "
                android:textColor="@color/grey_text"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_medium" />

            <TextView
                android:id="@+id/tv_kirim_ulang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Kirim Ulang"
                android:textColor="@color/app_green_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_edit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit, Alamat email anda"
                android:textColor="@color/app_green_light"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginTop="4dp" />

            <!-- Tombol Kirim -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_kirim"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_login"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="Kirim"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:letterSpacing="0.05" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
