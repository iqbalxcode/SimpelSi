<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login.LoginActivity">

    <!-- ====== GUIDELINE ATAS ====== -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_logo_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <!-- ====== LOGO ====== -->
    <ImageView
        android:id="@+id/img_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_name"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintTop_toTopOf="@id/guideline_logo_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ====== SCROLLVIEW ====== -->
    <ScrollView
        android:id="@+id/scroll_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/img_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="32dp">

            <!-- ===== EMAIL ===== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_color"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/email_small"
                    android:contentDescription="Email icon" />

                <EditText
                    android:id="@+id/et_email_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@android:color/transparent"
                    android:hint="Masukkan Emailmu"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_text"
                    android:textSize="18sp"
                    android:gravity="start" />
            </LinearLayout>

            <!-- ===== PASSWORD ===== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kata sandi"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_color"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/pw"
                    android:contentDescription="Password icon" />

                <EditText
                    android:id="@+id/et_password_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:background="@android:color/transparent"
                    android:hint="Masukkan Kata sandi"
                    android:inputType="textPassword"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_text"
                    android:textSize="18sp"
                    android:gravity="start" />

                <ImageView
                    android:id="@+id/iv_toggle_password"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/of"
                    android:contentDescription="Toggle password icon"
                    app:tint="@color/grey_text" />
            </LinearLayout>

            <!-- ====== LUPA KATA SANDI ====== -->
            <TextView
                android:id="@+id/tv_lupa_sandi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lupa kata sandi?"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:layout_gravity="end" />

            <!-- ====== TOMBOL MASUK ====== -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_masuk"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_login"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Masuk"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:letterSpacing="0.05" />

            <!-- ====== DAFTAR ====== -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum punya akun?"
                    android:textColor="@color/grey_text"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_regular" />

                <TextView
                    android:id="@+id/tv_daftar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Daftar Disini"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_regular" />
            </LinearLayout>

            <!-- ====== PEMBATAS ====== -->
            <TextView
                android:id="@+id/tv_atau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="────────  atau  ────────"
                android:textColor="@color/grey_text"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal" />

            <!-- ====== LOGIN GOOGLE ====== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_color"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/google"
                    android:contentDescription="Google icon" />

                <TextView
                    android:id="@+id/btn_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:text="Masuk dengan akun Google"
                    android:textAllCaps="false"
                    android:textColor="@color/green"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
