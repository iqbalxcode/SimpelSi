<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fitur.PengajuanLaporanActivity">

    <!-- ScrollView agar form bisa discroll -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="32dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/back"
                    android:contentDescription="Kembali" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo"
                    android:contentDescription="Logo" />
            </LinearLayout>

            <!-- Judul -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengajuan Laporan"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Kartu Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_form"
                android:padding="20dp"
                android:elevation="4dp">

                <!-- Upload Foto -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload foto *"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <LinearLayout
                    android:id="@+id/layoutUploadBox"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_upload_box"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/imgPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:visibility="gone"
                        android:contentDescription="Preview foto" />

                    <TextView
                        android:id="@+id/tvUploadFileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Format: .jpg / .png"
                        android:textColor="@color/grey_text"
                        android:textStyle="italic" />
                </LinearLayout>

                <!-- Tanggal + Tombol Hapus -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_input_field"
                        android:paddingHorizontal="12dp">

                        <EditText
                            android:id="@+id/etTanggal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Tanggal"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey_text"
                            android:paddingVertical="8dp"
                            android:background="@null" />

                        <ImageView
                            android:id="@+id/btnpilihtanggal"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/kalender"
                            android:contentDescription="Pilih tanggal" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnHapusFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HAPUS"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/green"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:fontFamily="@font/montserrat_semibold"
                        android:paddingHorizontal="20dp" />
                </LinearLayout>

                <!-- Nama -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama :"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Nama"
                    android:gravity="center"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:layout_marginTop="6dp"
                    android:textColorHint="@color/grey_text"
                    android:textColor="@color/black" />

                <!-- Lokasi -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasi Foto :"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_input_field"
                    android:paddingHorizontal="12dp"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/etLokasi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/location"
                        android:contentDescription="Lokasi" />

                    <!-- Ganti id ini jadi etLokasi -->
                    <EditText
                        android:id="@+id/Lokasi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="Klik tombol lokasi"
                        android:background="@null"
                        android:textColorHint="@color/grey_text"
                        android:textColor="@color/black"
                        android:paddingStart="8dp" />

                </LinearLayout>


                <!-- Keterangan -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan *"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/etKeterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Masukkan Keterangan foto"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:layout_marginTop="6dp"
                    android:textColorHint="@color/grey_text"
                    android:textColor="@color/black" />

                <!-- Tombol Upload -->
                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UPLOAD"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/montserrat_semibold"
                    android:backgroundTint="@color/green"
                    android:layout_marginTop="20dp"
                    android:paddingVertical="12dp"
                    android:layout_gravity="center"
                    app:cornerRadius="100dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
