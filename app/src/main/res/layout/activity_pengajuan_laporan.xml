<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fitur.PengajuanLaporanActivity">
    <ImageView
        android:id="@+id/main_background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg"
        android:scaleType="centerCrop"
        android:contentDescription="Main Background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="always"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengajuan Laporan"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_form"
                android:padding="20dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload foto *"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginBottom="6dp" />
                <LinearLayout
                    android:id="@+id/layoutUploadBox"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_upload_box"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:id="@+id/imgPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:visibility="gone"
                        android:contentDescription="Preview foto" />
                    <TextView
                        android:id="@+id/tvUploadFileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Format: .jpg / .png"
                        android:textColor="@color/grey_text"
                        android:fontFamily="@font/montserrat_medium" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal :"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_input_field"
                        android:paddingHorizontal="12dp">


                        <EditText
                            android:id="@+id/etTanggal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Tanggal"
                            android:focusable="false"
                            android:textSize="12dp"
                            android:clickable="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:paddingVertical="8dp"
                            android:textColorHint="@color/grey_text"
                            android:background="@null" />
                        <ImageView
                            android:id="@+id/btnpilihtanggal"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/kalender"
                            android:contentDescription="Tanggal" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnHapusFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hapus"
                        android:textSize="12dp"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/green"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:fontFamily="@font/montserrat_semibold"
                        android:paddingHorizontal="20dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama :"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold" />
                <EditText
                    android:id="@+id/etNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Nama"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="12dp"

                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginTop="6dp"
                    android:textColorHint="@color/grey_text"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasi Foto :"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginTop="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_input_field"
                    android:paddingHorizontal="12dp"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/iconLokasi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/location"
                        android:contentDescription="Lokasi" />

                    <EditText
                        android:id="@+id/etLokasi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:hint="Klik tombol lokasi"
                        android:background="@null"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColorHint="@color/grey_text"
                        android:textColor="@color/black"
                        android:paddingStart="8dp"
                        android:paddingVertical="12dp"/> </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan *"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/etKeterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Keterangan foto"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginTop="6dp"
                    android:textColorHint="@color/grey_text"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unggah"
                    android:textSize="12dp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/montserrat_semibold"
                    android:backgroundTint="@color/green"
                    android:layout_marginTop="20dp"
                    android:paddingVertical="12dp"
                    android:layout_gravity="center"
                    app:cornerRadius="100dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>